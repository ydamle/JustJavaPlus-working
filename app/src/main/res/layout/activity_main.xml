<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.justjavaplus.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="24sp"
        android:id="@+id/quantityText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusButton"
        android:text="-"
        android:layout_toRightOf="@id/quantityText"
        android:gravity="center"
        android:textSize="24sp"
        android:paddingLeft="16dp"
        android:onClick="decrement"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/quantityValue"
        android:layout_toRightOf="@id/minusButton"
        android:textSize="24sp"
        android:paddingLeft="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusButton"
        android:text="+"
        android:layout_toRightOf="@id/quantityValue"
        android:textSize="24sp"
        android:paddingLeft="16dp"
        android:onClick="increment"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price/Unit(USD):"
        android:textSize="24sp"
        android:id="@+id/priceText"
        android:layout_below="@id/quantityText"
        android:paddingTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="24sp"
        android:id="@+id/dollarSignForPrice"
        android:layout_toRightOf="@id/priceText"
        android:layout_below="@id/quantityValue"
        android:paddingTop="16dp"
        android:paddingLeft="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.25"
        android:textSize="24sp"
        android:layout_toRightOf="@id/dollarSignForPrice"
        android:layout_below="@id/quantityValue"
        android:paddingTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Value(USD):"
        android:layout_below="@id/priceText"
        android:id="@+id/totalText"
        android:paddingTop="16dp"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_below="@id/priceText"
        android:id="@+id/dollarSignTotal"
        android:paddingTop="16dp"
        android:textSize="24sp"
        android:layout_toRightOf="@id/totalText"
        android:paddingLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/priceText"
        android:id="@+id/totalValue"
        android:paddingTop="16dp"
        android:textSize="24sp"
        android:layout_toRightOf="@id/dollarSignTotal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textSize="24sp"
        android:layout_below="@id/totalText"
        android:paddingTop="24dp"
        android:onClick="placeOrder"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
